{
  "name": "anvil",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.19.0",
  "description": "",
  "author": "Jimmy Lew",
  "license": "MIT",
  "exports": [
    "./dist/start.mjs"
  ],
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "lint": "eslint . --cache",
    "clean": "git clean -xdf --exclude=\"/config/**/*\"",
    "clean:dry": "git clean -xdf --exclude=\"/config/**/*\" --dry-run",
    "build": "tsdown",
    "cli": "bun run dist/cli.mjs",
    "start": "bun run build && node dist/start.mjs",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "@discordjs/rest": "^2.6.0",
    "cron-parser": "^5.3.0",
    "discord.js": "^14.22.1",
    "discord.js-rate-limiter": "1.3.2",
    "luxon": "3.7.1",
    "pino": "9.9.0",
    "pino-caller": "^4.0.0",
    "pino-discord-webhook": "^0.1.7",
    "pino-pretty": "13.1.1",
    "pino-roll": "^4.0.0",
    "vitest-mock-extended": "^3.1.0",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.7.1",
    "@types/express": "5.0.3",
    "@types/luxon": "3.7.1",
    "@types/node": "^25.0.3",
    "@types/yaml": "^1.9.7",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.39.2",
    "eslint-plugin-format": "^1.1.0",
    "simple-git-hooks": "^2.13.1",
    "tsdown": "^0.18.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0",
    "vitest": "^3.2.4"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
