{
  "name": "anvil",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.19.0",
  "description": "",
  "author": "Jimmy Lew",
  "license": "MIT",
  "exports": [
    "./dist/start.mjs"
  ],
  "main": "./dist/start.mjs",
  "engines": {
    "node": ">=25.0.0"
  },
  "scripts": {
    "lint": "eslint . --cache",
    "clean": "git clean -xdf --exclude=\"/config/**/*\"",
    "clean:dry": "git clean -xdf --exclude=\"/config/**/*\" --dry-run",
    "build": "tsdown",
    "build:docker": "DOCKER_BUILDKIT=1 docker build -t jvnus/anvil:latest .",
    "cli": "node dist/cli.mjs",
    "start": "nr build && node --env-file=.env dist/start.mjs",
    "stop:docker": "docker stop anvil && docker rm anvil",
    "start:docker": "docker run --env-file .env -d -p 3333:3333 --name anvil jvnus/anvil:latest",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "@discordjs/rest": "^2.6.0",
    "@libsql/client": "^0.17.0",
    "atomic-sleep": "^1.0.0",
    "discord.js": "^14.22.1",
    "discord.js-rate-limiter": "1.3.2",
    "drizzle-orm": "^0.45.1",
    "nanoid": "^5.1.6",
    "on-exit-leak-free": "^2.1.2",
    "pino": "9.9.0",
    "pino-abstract-transport": "^3.0.0",
    "sonic-boom": "^4.2.0",
    "thread-stream": "^4.0.0",
    "vitest-mock-extended": "^3.1.0",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.7.1",
    "@antfu/ni": "^28.0.0",
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "eslint-plugin-format": "^1.1.0",
    "simple-git-hooks": "^2.13.1",
    "tsdown": "^0.18.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0",
    "vite": "^7.3.0",
    "vitest": "^3.2.4"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
