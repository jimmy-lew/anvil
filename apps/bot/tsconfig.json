{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@lib/*": ["../../packages/*"]
    },
    "module": "esnext",
    "moduleResolution": "bundler",
    "types": ["vite/client"],
    "strict": false,
    "declaration": true,
    "outDir": "./dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
  },
  "exclude": [
    "dist",
    "node_modules",
    "tests",
    "vitest.config.ts",
    "tsdown.config.ts",
    "**.bak**",
  ],
}
