{
  "extends": "@anvil/tsconf/tsconfig.base.json",
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
    },
    "types": ["vite/client"],
    "strict": false,
    "declaration": true,
    "outDir": "./dist",
    "sourceMap": true,
  },
  "include": ["src/**/*"],
  "exclude": [
    "dist",
    "node_modules",
    "tests",
    "vitest.config.ts",
    "tsdown.config.ts",
    "**/*.bak**",
  ],
}
