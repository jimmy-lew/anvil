{
  "name": "@anvil/bot",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.19.0",
  "description": "",
  "author": "Jimmy Lew",
  "license": "MIT",
  "exports": [
    "./dist/start.mjs"
  ],
  "main": "./dist/start.mjs",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "lint": "eslint . --cache",
    "clean": "git clean -xdf --exclude=\"/config/**/*\"",
    "clean:dry": "git clean -xdf --exclude=\"/config/**/*\" --dry-run",
    "build": "tsdown",
    "dev": "tsdown --watch & nodemon --exec 'node --env-file=.env dist/start.mjs' --watch dist",
    "build:docker": "DOCKER_BUILDKIT=1 docker build -t jvnus/anvil:latest .",
    "cli": "node dist/cli.mjs",
    "start": "nr build && node --env-file=.env dist/start.mjs",
    "stop:docker": "docker stop anvil && docker rm anvil",
    "start:docker": "docker run --env-file .env -d -p 3333:3333 --name anvil jvnus/anvil:latest",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@anvil/logger": "workspace:^",
    "@anvil/socket": "workspace:^",
    "@anvil/utils": "workspace:*",
    "@clack/prompts": "catalog:",
    "@discordjs/rest": "catalog:",
    "@libsql/client": "^0.17.0",
    "discord.js": "catalog:",
    "discord.js-rate-limiter": "catalog:",
    "drizzle-orm": "catalog:",
    "vitest-mock-extended": "catalog:",
    "yaml": "catalog:"
  },
  "devDependencies": {
    "@antfu/ni": "catalog:",
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "catalog:",
    "drizzle-kit": "catalog:",
    "nodemon": "catalog:",
    "simple-git-hooks": "catalog:",
    "tsdown": "^0.18.1",
    "typescript": "^5.9.2",
    "vite": "catalog:",
    "vitest": "catalog:"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": "npx eslint --fix"
  }
}
