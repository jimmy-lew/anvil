{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "anvil_dashboard",
  "version": "0.1.0",
  "identifier": "com.nvil.dev",
  "build": {
    "frontendDist": "../.output",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.svg"
    ]
  }
}
